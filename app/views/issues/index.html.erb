<div id="new_project" class="col-md-4">
  <div class="container">
    <div class="page-header">
      <h1><%= @project.projectName %>: Issues</h1>
    </div>
    <br/>
    <div class="row">
      <table class="table">
        <thead>
        <tr>
          <th>Issuename</th>
        </tr>
        </thead>
        <tbody>
        <% @issues.each do |issue| %>
            <tr>
              <td><%= link_to issue.issueName, issue %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
      <br>
      <div class="col-lg-10 text-right">
        <!-- Button trigger modal -->
            <% link_to "New Isuue", new_issue_path(:projectId  => params[:projectId]), :class => "btn btn-success" %>
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal">
              Create Issues
            </button> |
      </div>
        <%= link_to 'Back', projects_path, :class => "btn btn-default" %>
   </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" style="z-index: 99999;">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h3 class="modal-title" id="myModalLabel">Create Issue</h3>
      </div>

      <div class="modal-body">

        <%= form_for(@issue) do |f| %>
          <% if @issue.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

              <ul>
              <% @issue.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <%= f.hidden_field :project_id, :value => @project.id %>
          <div class="form-group">
            <div class="col-lg-6"><%= f.label :issueName %></div>
            <div class="col-lg-6"><%= f.text_field :issueName, :class => "form-control" %></div>
          </div>
          <div class="form-group">
            <div class="col-lg-6"></div>
            <div class="col-lg-6"><%= f.submit "Create Issue", :class => "btn btn-default" %></div>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">

      </div>
    </div>
  </div>
</div>
