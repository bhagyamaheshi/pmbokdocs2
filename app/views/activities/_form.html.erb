<%= form_for(@activity) do |f| %>
  <% if @activity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@activity.errors.count, "error") %> prohibited this activity from being saved:</h2>

      <ul>
      <% @activity.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :project_id, :value => @project.id %>
  <%= f.hidden_field :status, :value => "Incomplete" %>
  <div class="form-group">
    <div class="col-lg-3"><%= f.label :activityName %></div>
    <div class="col-lg-9"><%= f.text_field :activityName, :class => "form-control" %></div>
  </div>
<br/>
  <div class="form-group">
    <div class="col-lg-3"><%= f.label :Activity_Category %></div>
    <div class="col-lg-9"><%= f.collection_select :activity_category_id, ActivityCategory.all, :id, :activityCategoryName %></div>
  </div>
  <br/>
  <div class="form-group">
    <div class="col-lg-3"><%= f.label :Document_Category %></div>
    <div class="col-lg-9"><%= f.collection_select :documentcategories_id, DocumentCategory.all, :id, :categoryName %></div>
  </div>
  <br/>
  <div class="form-group">
    <div class="col-lg-3"><%= f.label :DueDate %></div>
    <div class="col-lg-9"><%= f.date_select :dueDate, :class => "form-control" %></div>
  </div>
  <br/>
  <div class="form-group">
    <div class="col-lg-3"><%= f.label :Priority %></div>
    <div class="col-lg-9">
      <%= radio_button_tag(:priority, "Low", checked = true) %><%= label_tag(:priority, "Low") %> &nbsp&nbsp&nbsp&nbsp
      <%= radio_button_tag(:priority, "Medium", checked = false) %><%= label_tag(:priority, "Medium") %> &nbsp&nbsp&nbsp&nbsp
      <%= radio_button_tag(:priority, "High", checked = false) %><%= label_tag(:priority, "High") %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-3"><%= f.label :Assigned_To %></div>
    <div class="col-lg-9"><%= f.collection_select :user_id, @user, :id, :email %></div>
  </div>
  <div class="form-group">
    <div class="col-lg-3"></div>
    <div class="col-lg-9"><%= f.submit "Create Activity", :class => "btn btn-default" %> &nbsp;&nbsp;
    <%= link_to 'Back', activities_path, :class => "btn btn-default" %></div>
  </div>
<% end %>
