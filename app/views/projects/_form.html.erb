<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
      <div class="col-lg-3"><%= f.label :projectName %></div>
      <div class="col-lg-9"><%= f.text_field :projectName, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-lg-3"><%= f.label :description %></div>
    <div class="col-lg-9"><%= f.text_area :description, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-lg-3"><%= f.label :startDate %></div>
    <div class="col-lg-9"><%= f.date_select :startDate, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-lg-3"><%= f.label :endDate %></div>
    <div class="col-lg-9"><%= f.date_select :endDate, :class => "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-lg-3"></div>
    <div class="col-lg-9 text-right">
        <%= f.submit "Create Project", :class => "btn btn-default" %> &nbsp;&nbsp;
        <%= link_to 'Back', projects_path, :class => "btn btn-default" %>
    </div>
  </div>
<% end %>
